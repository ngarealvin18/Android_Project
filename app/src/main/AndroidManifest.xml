<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-feature
        android:name="android.hardware.telephony"
        android:required="false" />

    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Alvin"
        tools:targetApi="31">
        <activity
            android:name=".CardActivity"
            android:exported="false"
            android:label="@string/title_activity_card"
            android:theme="@style/Theme.Alvin" />
        <activity
            android:name=".FruitList"
            android:exported="false"
            android:label="@string/title_activity_fruit_list"
            android:theme="@style/Theme.Alvin" />
        <activity
            android:name=".FruitList.kt"
            android:exported="false"
            android:label="@string/title_activity_fruit_list.kt"
            android:theme="@style/Theme.Alvin" />
        <activity
            android:name=".Fruits"
            android:exported="false"
            android:label="@string/title_activity_fruits"
            android:theme="@style/Theme.Alvin" />
        <activity
            android:name=".Recycleview"
            android:exported="false"
            android:label="@string/title_activity_recycleview"
            android:theme="@style/Theme.Alvin" />
        <activity
            android:name=".SimpleList"
            android:exported="false"
            android:label="@string/title_activity_simple_list"
            android:theme="@style/Theme.Alvin" />
        <activity
            android:name=".CalculatorActivity"
            android:exported="false"
            android:label="@string/title_activity_calculator"
            android:theme="@style/Theme.Alvin" />
        <activity
            android:name=".IntentActivity"
            android:exported="false"
            android:label="@string/title_activity_intent"
            android:theme="@style/Theme.Alvin" />
        <activity
            android:name=".RegisterActivity"
            android:exported="false"
            android:label="@string/title_activity_register"
            android:theme="@style/Theme.Alvin" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Alvin">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>